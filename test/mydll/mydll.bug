(function test-mydll ()
	(let ((r0 (alloc mydll-rect))
			  (r1 (alloc mydll-rect))
				(q0 (alloc mydll-quad)))
		(setf r0 x 4)
		(setf r0 y 5)
		(setf r0 w 6)
		(setf r0 h 7)
		(setf r1 x 8)
		(setf r1 y 9)
		(setf r1 w 10)
		(setf r1 h 11)
		(print (getf r0 x))
		(print-rect2 r0 r1)
		
		(setf q0 w 9)
		(setf q0 x 10)
		(setf q0 y 11)
		(setf q0 z 12)
		"why does it work regardless if i pass by value or not?"
		(print-4-by-value q0)))